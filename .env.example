#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost:8080/'
app.sessionDriver = 'CodeIgniter\Session\Handlers\RedisHandler'
app.sessionSavePath = 'tcp://redis:6379'

#--------------------------------------------------------------------
# DATABASE - PostgreSQL + PostGIS
#--------------------------------------------------------------------
database.default.hostname = db
database.default.database = geospt_db
database.default.username = geospt_user
database.default.password = geospt_password
database.default.DBDriver = Postgre
database.default.DBPrefix =
database.default.port = 5432
database.default.charset = utf8
database.default.schema = public

#--------------------------------------------------------------------
# REDIS - Cache & Queue
#--------------------------------------------------------------------
REDIS_HOST = redis
REDIS_PORT = 6379
REDIS_PASSWORD =
REDIS_DATABASE = 0
REDIS_PREFIX = geospt:

#--------------------------------------------------------------------
# MINIO / S3 - Object Storage
#--------------------------------------------------------------------
MINIO_ENDPOINT = http://minio:9000
MINIO_ACCESS_KEY = minioadmin
MINIO_SECRET_KEY = minioadmin123
MINIO_BUCKET = geospt-uploads
MINIO_BUCKET_PDF = geospt-pdfs
MINIO_BUCKET_THUMBNAILS = geospt-thumbnails
MINIO_REGION = us-east-1
MINIO_USE_SSL = false
MINIO_USE_PATH_STYLE = true

#--------------------------------------------------------------------
# JWT - Authentication
#--------------------------------------------------------------------
JWT_SECRET_KEY = 'your_jwt_secret_key_min_32_characters_long'
JWT_TIME_TO_LIVE = 28800
JWT_REFRESH_TIME_TO_LIVE = 604800

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
encryption.key = hex2bin:your_encryption_key_64_hex_characters

#--------------------------------------------------------------------
# QUEUE - Job Processing
#--------------------------------------------------------------------
QUEUE_DRIVER = redis
QUEUE_CONNECTION = default
QUEUE_RETRY_AFTER = 90

#--------------------------------------------------------------------
# CORS - API Access
#--------------------------------------------------------------------
CORS_ALLOWED_ORIGINS = http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS = GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS = Content-Type,Authorization

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
LOG_LEVEL = debug
LOG_CHANNEL = stack
